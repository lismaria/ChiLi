<%- include('./partials/header') %>

    <link rel="stylesheet" href="/../../style/resources.css">
    <title><%=group.group_name%> | Resources </title>
</head>
    <%- include('./partials/body') %>
    
    <div class="resource-container">


        <div class="resource-header">
            <a href="/resources/<%=group._id%>"><span class="iconify" data-inline="false" data-icon="akar-icons:arrow-back-thick-fill" style="width:30px;height:30px"></span></a>
            <div class="attach-file" ng-click="resource()">
                <div>
                    <span class="iconify" data-inline="false" data-icon="bi:plus" style="color:#FF6580;font-size: 50px;margin-right:0px;"></span>
                </div>
                <button>Attach File</button>
            </div>
        </div>


        <div class="folder-maincontent">
            <div class="folder-header">
                <div>
                    <span class="iconify" data-inline="false" data-icon="bx:bxs-folder" style="color:var(--bg);margin-right:0px;width:40px;height:30px;"></span>
                    <p><%=folder[0].folders.folder_name%></p>
                </div>

                <div class="resource-note" style="display:flex;justify-content: flex-end;font-size:15px;color:var(--grpmarkR)">
                    Note : Word Files and PPT's are only downloadable
                </div>
            </div>
            
            <div class="file-container">
                <% if(group.resource_id!=null){ %>
                    <% folder[0].folders.files.forEach(function(files){ %>
                <div class="resource-file">
                    <a href="/resources/<%=group._id%>/<%=folder[0].folders._id%>/uploads/<%=files.rename%>" style="text-decoration: none;color:var(--bg)">
                    <div class="uploaded-files">
                        Click to view
                    </div>
                    </a>

                    <div class="file_name">
                        <%=files.name%>
                    </div>
                </div>
                <% }) %> 
            <% } %>
            </div>
        </div>

        <div class="ng-cloak resource-modal" ng-show="resourceModal" ng-cloak>

            <div class="resource-modal-content ng-cloak" ng-cloak>
                <div class="resource-modal-upper">
                    Attach a File
                </div>


                <div class="resource-modal-form">
                    <form name="insert-file" method="POST" action="/resources/<%=group._id%>/<%=folder[0].folders._id%>/insert-file" id="insert-file" enctype="multipart/form-data">
                        <label for="choose-file">Choose a file</label>
                        <input type="file" name="filename" id="choose-file">
                    </form>
                </div>


                <div class="create-cancel-buttons">
                    <button type="submit" form="insert-file" style="background: #FF6580;color:#fff">Add</button>
                    <button type="reset" form="insert-file" ng-click="resource()" style="background: transparent;border: 1px solid #687283;color:var(--bgtxt)">Cancel</button>
                </div>
            </div>

        </div>


    </div>

    <%- include('./partials/grpname') %>
    <%- include('./partials/nav') %>
    <%- include('./partials/footer') %>